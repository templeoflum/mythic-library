    "data_schemas": {
      "connection": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": {
            "type": "string",
            "description": "Source node_id",
            "pattern": "^(D|R|E)[1-6]|∅$"
          },
          "to": {
            "type": "string",
            "description": "Target node_id",
            "pattern": "^(D|R|E)[1-6]|∅$"
          },
          "bidirectional": {
            "type": "boolean",
            "default": true,
            "description": "Can traverse in both directions"
          }
        }
      },

      "path": {
        "type": "object",
        "required": ["path_id", "name", "sequence"],
        "properties": {
          "path_id": {
            "type": "string",
            "description": "Unique identifier (UUID recommended)"
          },
          "name": {
            "type": "string",
            "description": "Human-readable path name"
          },
          "description": {
            "type": "string",
            "description": "Optional longer description"
          },
          "sequence": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^(D|R|E)[1-6]|∅$"
            },
            "minItems": 2,
            "description": "Ordered list of node_ids"
          },
          "type": {
            "type": "string",
            "enum": ["hexagon", "spiral", "radial", "triangle", "custom"],
            "description": "Path category"
          },
          "tags": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Classification tags"
          },
          "is_circuit": {
            "type": "boolean",
            "description": "Returns to starting node"
          },
          "created_date": {
            "type": "string",
            "format": "date-time"
          }
        }
      },

      "topology": {
        "type": "object",
        "properties": {
          "connections": {
            "type": "array",
            "items": {"$ref": "#/data_schemas/connection"}
          }
        }
      },

      "complete_system": {
        "type": "object",
        "properties": {
          "nodes": {
            "type": "array",
            "items": {"type": "object"},
            "minItems": 18,
            "maxItems": 18
          },
          "nontion": {"type": "object"},
          "topology": {"$ref": "#/data_schemas/topology"},
          "paths": {
            "type": "array",
            "items": {"$ref": "#/data_schemas/path"}
          }
        }
      }
    },

